<Application x:Class="MyBestCoffee.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyBestCoffee"
             xmlns:viewModel="clr-namespace:MyBestCoffee.MVVM.ViewModel"
             xmlns:view="clr-namespace:MyBestCoffee.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextboxTheme.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:RecipesViewModel}">
                <view:RecipesView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModel:FavoriteViewModel}">
                <view:FavoriteView/>
            </DataTemplate>
            
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
